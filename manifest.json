{
    "manifest_version": 2,
    "name": "Pisces",
    "description": "IP multicast based chat.",
    "version": "0.1",
    "app": {
        "background": {
            "scripts": [
                "js/agent.js",
                "js/pisces.js",
                "js/background.js"
            ]
        }
    },
    "permissions" : [
        "storage"
    ],
    "sockets" : {
        "udp" : {
            "send": ["*"],
            "bind": ["*"]
        }
    },
    "icons": { "16": "img/icon-16.png", "128": "img/icon-128.png" }
}
